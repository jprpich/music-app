<h1>Create Album!</h1>
<form action="<%= albums_path %>" method="POST">
  <%= auth_token %>
  <label for="name">Name: </label>
  <input type="text" name="album[title]">
  <select name="album[band_id]">
    <% @bands.each do |band| %>
      <option value="<%= band.id %>"><%= band.name %></option>
    <% end %>
  </select>
  <br>
  <label for="live">Type of Album</label>
  <input id="live" type="radio" name="album[live]" value="true"> Live
  <input id="live" type="radio" name="album[live]" value="false"> Studio <br>

  <input type="submit" value="Create Album!">
</form>